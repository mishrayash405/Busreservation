<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
 	android:layout_height="fill_parent"
	android:background="#5df5e9e9"
 	>
	<android.support.v7.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">
<!--
	<ImageView
		android:layout_width="100dp"
		android:layout_height="120dp"
		android:id="@+id/imageView"
		android:background="@drawable/image"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />
-->
	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp">
		<TableRow>
			<TextView
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="Timing"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
 	<TextView android:id="@+id/timings"
		android:textSize="20sp"
		android:textStyle="bold"
		android:text="time"
		android:layout_marginLeft="20dp"
		android:textColor="#000000"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>

		</TableRow>
		<TableRow>
			<TextView
				android:textSize="15dp"
				android:text="Agency"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				/>
 	<TextView android:id="@+id/agency"
	    android:textSize="15dp"
        android:text="Sha"
        android:layout_alignTop="@+id/timings"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:layout_marginLeft="20dp"
        />

		</TableRow>
		<TableRow>
    <TextView android:id="@+id/categary"
        android:textSize="15sp"
        android:text="Ac"
        android:textAlignment="@+id/agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>
			<TextView
				android:textSize="15sp"
				android:text="Seat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:layout_marginLeft="20dp"
				/>

    <TextView android:id="@+id/seat"
		android:textSize="15sp"
        android:text="seat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:layout_gravity="center_horizontal"
         />
		</TableRow>
		<TableRow>
			<TextView
				android:textSize="15sp"
				android:text="KM"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"/>
    <TextView android:id="@+id/range"
        android:textSize="15sp"
		android:layout_column="0"
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
		android:layout_marginLeft="20dp"
		/>
</TableRow>
           <TableRow>
			<TextView
				android:textSize="15sp"
				android:text="Rs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000"/>
			<TextView android:id="@+id/price"
				android:textSize="15sp"
				android:layout_marginLeft="20dp"
				android:text="rs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000"
				/>
		</TableRow>
		<TableRow>
			<TextView
				android:textSize="15sp"
				android:text="Bus No."
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				 />
    <TextView android:id="@+id/bus_no"
        android:textSize="15sp"
		android:layout_marginLeft="20dp"
        android:text="up78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         />
		</TableRow>
		<TableRow>
			<TextView
				android:textSize="15sp"
				android:text="Moving Day"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				/>
			<TextView android:id="@+id/bus_day"
				android:textSize="15sp"
				android:text="sun"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal" />
		</TableRow>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="20dp"
			android:textColor="#000"
			android:id="@+id/hidden"
			android:text="Id"
			android:visibility="invisible"
			/>

	</TableLayout>
	</android.support.v7.widget.LinearLayoutCompat>
	
</LinearLayout>
